@page
@model PrivacyModel
@{
    ViewData["Title"] = "Products";
}


<div class="text-center maintext">
    <h1 class="display-4">Products</h1>
    <p>List of products we sell</p>
</div>

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/fakedoor1.jpeg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block" id="FirstCaption">
                <h4>Colorful Classic Fake Doors - $299.99</h4>
                <h5>Our original and best selling way to get absolutely nowhere! <a href="/Cart" onclick="addClassic()" class="text-decoration-none">Click Here</a> to buy.</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/fakedoor4.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h4>Zero Hinges - $199.99</h4>
                <h5>They have knobs but no hinges. 100% guaranteed not to open or your money back! <a href="/Cart" onclick="addHinges()" class="text-decoration-none">Click Here</a> to buy.</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/fakedoor5.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h4>Deluxe Hardwood Fake Door - $399.99</h4>
                <h5>Hardwood, fake, what more could you want? <a href="/Cart" onclick="addHard()" class="text-decoration-none">Click Here</a> to buy.</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>